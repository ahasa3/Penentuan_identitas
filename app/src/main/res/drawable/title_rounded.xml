<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:left="4dp" android:top="32dp" android:right="4dp" android:bottom="-10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow" /> <!-- Semi-transparent black for shadow -->
            <corners android:radius="50dp" /> <!-- Rounded corners matching main shape -->
        </shape>
    </item>

    <!-- Main Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Black border -->
        </shape>
    </item>

</layer-list>